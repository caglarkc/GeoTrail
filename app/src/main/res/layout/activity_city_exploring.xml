<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".CityExploringActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/firstpage3"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="ITALY"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:elevation="5dp"
                    android:textStyle="italic|bold" />

            </FrameLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityCapital"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="24sp"
                        android:textStyle="italic|bold"
                        android:text="Roma"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cityImage"
                        android:src="@drawable/firstpage3"
                        android:scaleType="fitXY"
                        android:layout_height="120dp"
                        app:layout_constraintTop_toBottomOf="@id/cityCapital"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityExplain"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:textStyle="italic|bold"
                        android:text="FLDSKMŞLASDKFŞASDKLFALDSÖFŞLSAKLFSLAÖCXKSDFSAFKLALSDKLAşksdASDMSADMlcmklasdmlaKSDLasdkmaLKLDlşaskdşlAKDŞkasşdkşAKDSŞKaşdkşakD"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cityImage"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:layout_width="100dp"
                        android:background="@color/background_color"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:textAllCaps="false"
                        android:text="Explore"
                        android:textColor="@color/white"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/cityExplain"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityCapital2"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="24sp"
                        android:textStyle="italic|bold"
                        android:text="Roma"
                        android:fontFamily="@font/font"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cityImage2"
                        android:src="@drawable/firstpage3"
                        android:scaleType="fitXY"
                        android:layout_height="120dp"
                        app:layout_constraintTop_toBottomOf="@id/cityCapital2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityExplain2"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:textStyle="italic|bold"
                        android:text="FLDSKMŞLASDKFŞASDKLFALDSÖFŞLSAKLFSLAÖCXKSDFSAFKLALSDKLAşksdASDMSADMlcmklasdmlaKSDLasdkmaLKLDlşaskdşlAKDŞkasşdkşAKDSŞKaşdkşakD"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cityImage2"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:layout_width="100dp"
                        android:background="@color/background_color"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:textAllCaps="false"
                        android:text="Explore"
                        android:textColor="@color/white"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/cityExplain2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityCapital3"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="24sp"
                        android:textStyle="italic|bold"
                        android:text="Roma"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cityImage3"
                        android:src="@drawable/firstpage3"
                        android:scaleType="fitXY"
                        android:layout_height="120dp"
                        app:layout_constraintTop_toBottomOf="@id/cityCapital3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityExplain3"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:textStyle="italic|bold"
                        android:text="FLDSKMŞLASDKFŞASDKLFALDSÖFŞLSAKLFSLAÖCXKSDFSAFKLALSDKLAşksdASDMSADMlcmklasdmlaKSDLasdkmaLKLDlşaskdşlAKDŞkasşdkşAKDSŞKaşdkşakD"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cityImage3"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:layout_width="100dp"
                        android:background="@color/background_color"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:textAllCaps="false"
                        android:text="Explore"
                        android:textColor="@color/white"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/cityExplain3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/layout_border"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityCapital4"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="24sp"
                        android:textStyle="italic|bold"
                        android:text="Roma"
                        android:fontFamily="@font/font"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/cityImage4"
                        android:src="@drawable/firstpage3"
                        android:scaleType="fitXY"
                        android:layout_height="120dp"
                        app:layout_constraintTop_toBottomOf="@id/cityCapital4"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/cityExplain4"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:textStyle="italic|bold"
                        android:text="FLDSKMŞLASDKFŞASDKLFALDSÖFŞLSAKLFSLAÖCXKSDFSAFKLALSDKLAşksdASDMSADMlcmklasdmlaKSDLasdkmaLKLDlşaskdşlAKDŞkasşdkşAKDSŞKaşdkşakD"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cityImage4"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:layout_width="100dp"
                        android:background="@color/background_color"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:textAllCaps="false"
                        android:text="Explore"
                        android:textColor="@color/white"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toBottomOf="@id/cityExplain4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


        </LinearLayout>








    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/navigationMenuContainer"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="0dp"
            android:src="@drawable/baseline_search_24"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_height="50dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:src="@drawable/baseline_flag_24"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_height="50dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:src="@drawable/baseline_airplane_24"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_height="50dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:src="@drawable/baseline_profile_24"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_height="50dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:src="@drawable/baseline_settings_24"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_height="50dp"/>


    </LinearLayout>

</LinearLayout>